<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/round_shape_lr_wg_i">

    <ImageView
        android:id="@+id/list_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="19dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/main_top_icon"/>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="13dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="암호화폐명"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/font_medium"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"/>

        <TextView
            android:id="@+id/list_s_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="암호화폐 약어"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/font_light"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="105dp"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/font_medium"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/font_bold"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"/>

        <TextView
            android:id="@+id/list_ex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:text="상장 정보 없음"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/font_light"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"/>
    </LinearLayout>

    <View
        android:id="@+id/ex_color"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_shape_lr_wg_i_w"/>
</LinearLayout>