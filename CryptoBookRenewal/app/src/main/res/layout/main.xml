<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_gradient">

    <LinearLayout
        android:id="@+id/plate_main_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="18dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:gravity="center_vertical"
            android:background="@drawable/round_shape_lr_wg">

            <TextView
                android:id="@+id/cur_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="3dp"
                android:gravity="center"
                android:text="KRW  ▼"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/font_medium"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/home_refresh"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/main_top_icon"
        android:onClick="MainClickPack"/>

    <ImageView
        android:id="@+id/settings"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/main_setting_icon"/>

    <LinearLayout
        android:id="@+id/plate_main_2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/plate_main_1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="60dp"
            android:text="추정 보유 자산"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/font_medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="40dp"
            android:paddingRight="20dp"
            android:gravity="right"
            android:background="@drawable/round_shape_lr_white_b">

            <TextView
                android:id="@+id/sum_of_asset"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="0"
                android:textSize="23sp"
                android:textColor="#FFF75F"
                android:fontFamily="@font/font_bold"
                android:includeFontPadding="false"
                android:singleLine="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="  원"
                android:textSize="23sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/font_medium"
                android:includeFontPadding="false"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
    
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/plate_main_1"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="36.6dp"
        android:src="@drawable/main_crypto_icon"/>

    <View
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/plate_main_2"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/round_shape_white_b"/>

    <View
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/plate_main_2"
        android:layout_marginTop="7.7dp"
        android:layout_marginLeft="55dp"
        android:background="@drawable/round_shape_white_l"/>

    <LinearLayout
        android:id="@+id/plate_main_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/plate_main_2"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="75.5dp"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="참여 획득 비율"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/font_medium"/>

        <TextView
            android:id="@+id/part_ratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="0%"
            android:textSize="30sp"
            android:textColor="#8FDBF2"
            android:fontFamily="@font/font_bold"
            android:includeFontPadding="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/plate_main_2"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="230dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="에어드랍    "
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/font_medium"/>

            <TextView
                android:id="@+id/airdrop_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="정보없음"
                android:textSize="16sp"
                android:textColor="#FC9B4C"
                android:fontFamily="@font/font_bold"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ICO 참여    "
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/font_medium"/>

            <TextView
                android:id="@+id/ico_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="정보없음"
                android:textSize="16sp"
                android:textColor="#FC9B4C"
                android:fontFamily="@font/font_bold"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타 투자    "
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/font_medium"/>

            <TextView
                android:id="@+id/invest_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="정보없음"
                android:textSize="16sp"
                android:textColor="#FC9B4C"
                android:fontFamily="@font/font_bold"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/plate_main_3"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#2B2B2B"/>

    <LinearLayout
        android:id="@+id/plate_main_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/plate_main_5"
        android:layout_below="@id/line"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="보유 암호화폐"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/font_medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/belong_crypto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/font_bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="  개"
                    android:textSize="17sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/font_medium"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="미분배 암호화폐"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/font_medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/no_dist_crypto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/font_bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="  개"
                    android:textSize="17sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/font_medium"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="현금화 가능 금액"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/font_medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/encash"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/font_bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="  원"
                    android:textSize="17sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/font_medium"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/plate_main_5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@id/plate_main_6"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal"
        android:background="@drawable/round_shape_lr_white_b">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="달러 환율 (USD)"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/font_medium"/>

            <TextView
                android:id="@+id/usd_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="―  0.00"
                android:textSize="19sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/font_bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="엔화 환율 (100JPY)"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/font_medium"/>

            <TextView
                android:id="@+id/jpy_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="―  0.00"
                android:textSize="19sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/font_bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="위안화 환율 (CNY)"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/font_medium"/>

            <TextView
                android:id="@+id/cny_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="―  0.00"
                android:textSize="19sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/font_bold"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="60dp"
        android:layout_below="@id/plate_main_4"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="147dp"
        android:background="#2B2B2B"/>

    <View
        android:layout_width="1px"
        android:layout_height="60dp"
        android:layout_below="@id/plate_main_4"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="266dp"
        android:background="#2B2B2B"/>

    <LinearLayout
        android:id="@+id/plate_main_6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/black_gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_home"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/home_c_icon"/>

            <ImageView
                android:id="@+id/main_to_balance"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/balance_icon"
                android:onClick="MainClickPack"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_to_statistic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/statistic_icon"/>

            <ImageView
                android:id="@+id/main_to_wallet"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/wallet_icon"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/plate_main_7"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="11dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/plate_main_7_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/round_shape_lr_wg_i_p_gra">

            <TextView
                android:id="@+id/add_fast"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="빠른 추가"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/font_bold"
                android:onClick="MainClickPack"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/plate_main_7_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/round_shape_lr_wg_i_b_gra">

            <TextView
                android:id="@+id/add_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="상세 추가"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/font_bold"
                android:onClick="MainClickPack"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/main_plus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/plus_icon"/>
    </LinearLayout>

    <TextView
        android:id="@+id/exchange_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/plate_main_6"
        android:layout_marginTop="5dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="15dp"
        android:gravity="right"
        android:text="정보를 불러올 수 없습니다"
        android:textSize="14sp"
        android:textColor="#939393"
        android:fontFamily="@font/font_light"/>
</RelativeLayout>